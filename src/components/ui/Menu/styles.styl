.menu
  display flex
  width 60%
  height 120px
  justify-content center
  align-items center
  padding 4px
  a
    display flex
    flex-direction column
    cursor pointer
    font-size 1.1rem
    margin 10px 15px 0 15px
    padding 3px
  a::after
    width 1px
    content ""
    border solid 1px $white
    transition width .2s
  .a-visited::after
    display inline
    width 100%
    content ""
    border solid 1px $primary
    transition width .1s  
  a:hover::after
    display inline
    width 100%
    content ""
    border solid 1px $primary
    transition width .1s

