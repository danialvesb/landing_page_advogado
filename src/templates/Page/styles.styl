.page-template
  width 100%
  display flex
  flex-direction column
  background-color $primary
  .header-template
    display flex
    justify-content center
    width 100%
    height 150px
    background-color $white
    position fixed
    z-index 10
  .content-template
    position relative
    top 150px
    width 100%
  .footer-template
    position relative
    top 150px
    display flex
    width 100%
    height 180px
    background-color $white